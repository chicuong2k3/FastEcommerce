@inject DialogService DialogService
@inject IValidator<AddValueForProductAttributeRequest> Validator

<RadzenTemplateForm TItem="AddValueForProductAttributeRequest" Data="@AttributeValue" Submit="@Submit">
    <RadzenStack>
                    <RadzenFormField Text="Giá trị" Variant="Radzen.Variant.Outlined" AllowFloatingLabel="false" Style="width: 100%;">
                        <ChildContent>
                            <RadzenTextBox Name="ProductAttributeValue" @bind-Value="AttributeValue.ProductAttributeValue" />
                        </ChildContent>
                        <Helper>
                            <FluentValidator TModel="AddValueForProductAttributeRequest" TValue="string"
                                             For="@(() => AttributeValue.ProductAttributeValue)"
                                             Model="@AttributeValue"
                                             Validator="@Validator" />
                        </Helper>
                    </RadzenFormField>


        <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" Gap="8px">
            <RadzenButton Text="Đóng" ButtonStyle="ButtonStyle.Secondary" Size="Radzen.ButtonSize.Medium" Click="@(() => DialogService.Close(false))" Shade="Shade.Default" Variant="Variant.Flat" />
            <RadzenButton Text="Lưu thay đổi" ButtonType="ButtonType.Submit" ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.Medium" Variant="Variant.Flat" />
        </RadzenStack>
    </RadzenStack>
</RadzenTemplateForm>

@code {
    [Parameter]
    public AddValueForProductAttributeRequest AttributeValue { get; set; } = new();

    private void Submit()
    {
        DialogService.Close(true);
    }
}